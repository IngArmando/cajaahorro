#eliminar la vista de datos al publico
#Options +FollowSymLinks
#Options All -Indexes

#reescribir URL
RewriteEngine on
RewriteCond %{SCRIPT_FILENAME} !-d
RewriteCond %{SCRIPT_FILENAME} !-f


#url dinamicas para las vistas
Rewriterule ^view/(\D*)(|/([0-9])*)$ index.php?p=$1&id=$3

#url dinamicas para los controladores
Rewriterule ^c/(\D*)$ controlador/cor$1.php

#url dinamicas para las reportes
Rewriterule ^reporte/(\D*)$ vista/reportes/$1/$1Pdf.php

#url dinamicas para los reportes con html2pdf
Rewriterule ^reporteD/(\D*)/(\d*)$ vista/reportes/librerias/HacerReporte.php?reporte=$1&id=$2

#url dinamicas para los reportes de ayuda
Rewriterule ^ayuda/(\D*)/(\D*)$ vista/reportes/$1/$2.pdf

#url dinamica para los json que devuelve el sistema segun lo necesario
Rewriterule ^tipodocumento/(\d) json/dinamismo.php?tp=$1
 
#primera proteccion
RewriteCond %{QUERY_STRING} base64_encode[^(]*\([^)]*\) [OR]
RewriteCond %{QUERY_STRING} (<|%3C)([^s]*s)+cript.*(>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})

